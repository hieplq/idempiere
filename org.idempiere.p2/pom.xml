							<!-- The uid in the .product file, NOT the name of the .product file -->
							<id>${idempiere.product.id}</id>
							<archiveFileName>idempiere-server-${unqualifiedVersion}-${buildQualifier}</archiveFileName>
						</product>
					</products>
				</configuration>
			</plugin>

